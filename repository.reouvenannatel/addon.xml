<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.reouvenannatel" name="Annatel TV Add-ons" version="1.0.0" provider-name="Reouven Mimoun">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="Annatel TV Add-ons">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/mreouven/repository.annatel/master/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/mreouven/repository.annatel/master/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/mreouven/repository.annatel/master/repo</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Install add-ons from Reouven's Annatel TV repository</summary>
        <description>Repository for Annatel TV add-ons including live TV and VOD services</description>
        <platform>all</platform>
        <assets>
            <icon>icon.jpeg</icon>
            <fanart>fanart.jpeg</fanart>
        </assets>
    </extension>
</addon>